@model DonateMe.Web.Models.ProductModel

@{
    ViewBag.Title = "Contribute to DonateMe";
    Layout = "~/Views/Shared/_ItemLayout.cshtml";
}

<div ng-show="info==null">

    <h2>Add an item</h2>

    <form name="uploadForm" ng-submit="submitForm()">
        
        Product name:<input type="text" ng-model="prodName"/>
        Photo(s):<input type="file" file-upload multiple/>
        <input type="submit" value="submit"/>

    </form>

</div>

<div product-display-directive ng-hide="info==null"></div>
